  ruckArrivalsEffective: number;
  ruckEfficiencyPct: number;
  kicksTotal: number;
  kicksGood: number;
  kickSuccessPct: number;
  errors: number;
};

type PlayerBoxScoreProps = {
  matchInfo: {
    teamA: string;
    teamB: string;
  };
